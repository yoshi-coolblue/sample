<%= link_to("一覧に戻る",reports_path) %>
<%= form_for @report  do |f| %>
  <%= f.submit "レポート作成" %><br/>
  <%= f.label :name, "レポート名" %>
  <%= f.text_field :name %>
  <table>
    <tr>
      <th></th>
      <th>メルマガID</th>
      <th>タイトル</th>
    </tr>
    <% @articles.each do |a| %>
    <tr>
      <td><%= check_box_tag 'article_id[]',a.article_id %></td>
      <td><%= a.article_id %></td>
      <td><%= a.title %></td>
    </tr>
    <% end %>
  </table>
<% end %>
